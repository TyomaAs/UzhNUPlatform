<% if current_user.role == "teacher" || current_user.role == "admin" %>
	<h2>Додавання нового посту</h2>
	<%= form_for @post, url: course_posts_path do |f| %>
		<%= render partial: "shared/form_errors", locals: { object: f.object } %>
		<p>
			Назва<br> 
			<%= f.text_field(:title, {:class => 'form-control'}) %> 
		</p>

		<p>
			Текст статті<br> 
			<%= f.text_area(:body, {:class => 'form-control'}) %>
		</p>
		<%= f.hidden_field(:date, value: DateTime.now, class: 'form-control') %>

		<p>
			<%= f.submit({:class => 'btn btn-success'}) %>
		</p>
	<% end %>
<% end %>

