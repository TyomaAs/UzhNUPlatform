<% if current_user.role == "admin" || current_user.email == @course.user.email %>
	<div class="container">
		<h2>Редагувати курс</h2>
		<%= form_for @course, url: course_path(@course) do |f| %>
			<%= f.text_field :name, class: 'form-control' %> 
			<%= f.hidden_field :user, class: 'form-control', value: current_user.name %>
			
			<%= f.submit "Зберегти зміни", class: "btn btn-primary" %>
		<% end %>
		
		<%= button_to "Видалити курс", course_path(@course), method: :delete, class: 'btn btn-danger' %>
	</div>
<% end %>
